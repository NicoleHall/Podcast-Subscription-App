<h2>Publications</h2>
<div>
  <%= link_to "New Publication", new_admin_publication_path, class: "btn btn-primary" %>
</div>
<% @publications.each do | publication| %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= publication.title %></h3>
  </div>
  <div class="panel-body">
    <p><%= publication.description %></p>
    <p><a href="<%= publication.file_url %>">Listen Now</a></p>
  </div>
  <div class="panel-footer">
    <%= link_to "View more details", admin_publication_path(publication), class: "btn btn-default" %>
    <%= link_to "Edit", edit_admin_publication_path(publication), class: "btn btn-default" %>
    <%= link_to "Delete", admin_publication_path(publication), method: :delete, class: "btn btn-default" %>
  </div>
</div>

<% end %>
